project_name: soc_thunderboard_brd4184a
package: Bluetooth
label: Bluetooth - SoC Thunderboard EFR32BG22 (BRD4184A)
description: >
  Demonstrates the features of the Thunderboard EFR32BG22 Kit.
  This can be tested with the Thunderboard mobile app.
category: Bluetooth Examples
quality: production

component:
  - id: brd4184a
  - id: bluetooth_stack
  - id: gatt_configuration
  - id: bluetooth_feature_advertiser
  - id: bluetooth_feature_connection
  - id: bluetooth_feature_gatt
  - id: bluetooth_feature_gatt_server
  - id: bluetooth_feature_scanner
  - id: bluetooth_feature_sm
  - id: bluetooth_feature_system
  - id: ota_dfu
  - id: bootloader_interface
  - id: rail_util_pti
  - id: app_log
  - id: app_assert
  - id: component_catalog
  - id: iostream_usart
    instance:
      - vcom
  - id: iostream_retarget_stdio
  - id: printf
  - id: simple_timer
  - id: mpu
  - id: power_supply

  - id: gatt_service_aio
  - id: gatt_service_battery
  - id: gatt_service_hall
  - id: gatt_service_imu
  - id: gatt_service_light
  - id: gatt_service_rht
  - id: sensor_hall
  - id: sensor_imu
  - id: sensor_light
  - id: sensor_rht

  - id: i2cspm
    instance:
      - sensor
  - id: simple_led
    instance:
      - led0
  - id: simple_button
    instance:
      - btn0

config_file:
  - override:
      component: gatt_configuration
      file_id: gatt_configuration_file_id
    path: gatt_configuration_brd4184a.btconf
    directory: btconf


configuration:
  - name: SL_STACK_SIZE
    value: "2752"
  - name: SL_HEAP_SIZE
    value: "9200"
  - name: SL_BOARD_ENABLE_VCOM
    value: "1"
  - name: SL_BOARD_ENABLE_SENSOR_RHT
    value: "1"
  - name: SL_PSA_KEY_USER_SLOT_COUNT
    value: "0"
    condition:
      - psa_crypto
  - name: APP_LOG_NEW_LINE
    value: "APP_LOG_NEW_LINE_RN"

tag:
  - prebuilt_demo
  - hardware:board_only

ui_hints:
  highlight:
    - path: config/btconf/gatt_configuration_brd4184a.btconf
    - path: readme.html
      focus: true
